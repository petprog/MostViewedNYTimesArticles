<!--        <item name="material_dialog_title_text_color">@color/textColor</item>-->
<!--        <item name="material_dialog_positive_button_color">@color/colorAccent</item>-->
<!--        <item name="material_dialog_positive_button_text_color">@color/colorPrimary</item>-->
<!--        <item name="material_dialog_negative_button_text_color">@color/colorAccent</item>-->
    </style>

    <!-- The theme without ActionBar -->
    <style name="Theme.MostViewedNYTimes.NoActionBar">
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MostViewedNYTimes.AppBarOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

    <style name="Theme.MostViewedNYTimes.PopupOverlay" parent="ThemeOverlay.MaterialComponents">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>

</resources>